{
  "name": "remax-wechat-demo",
  "private": true,
  "version": "1.0.0",
  "description": "Remax wechat demo",
  "author": "okoala <dapixp@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "remax build -t wechat -w",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production remax build -t wechat",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:less": "stylelint \"src/**/*.less\" --syntax less",
    "lint:less:fix": "stylelint \"src/**/*.less\" --syntax less --fix",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "clsx": "^1.0.4",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "remax": "^1.1.0",
    "remax-cli": "^1.1.0",
    "rimraf": "^2.6.3",
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "chokidar": "^2.1.8",
    "eslint": "^5.4.0",
    "eslint-config-umi": "^1.4.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.11.1",
    "eslint-plugin-react-hooks": "^2.2.0",
    "less": "^3.10.3",
    "lint-staged": "^7.2.2",
    "prettier": "^1.18.2",
    "stylelint": "^9.8.0",
    "stylelint-config-css-modules": "^1.3.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add -f"
    ],
    "*.{css,less,json}": [
      "prettier --write",
      "git add -f"
    ]
  }
}
